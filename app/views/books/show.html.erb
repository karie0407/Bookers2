<p id="notice">
  <%= flash[:notice] %>
</p>
<div class="container px-5 px-sm-0">
  <div class="row">
<%= render 'info', books: @books %>

<div class="col-md-8 offset-md-1">
  <h2>Book detail</h2>

<table class="table">
  <tbody>
    <tr>
      <td><%=link_to user_path(@user.id) do %>
          <%= image_tag @user.get_profile_image(100,100) %><br>
         <%= @book.user.name %>
         </td>
      <td><%= link_to @book.title %></td>
      <td><%= @book.body %></td>
      <td><%= link_to"Edit",edit_book_path(@book.id),class:"btn btn-sm btn-success" %></td>
      <td><%= link_to"Destroy",books_path,method: :delete,"data-confirm"=>"本当に消しますか？",class:"btn btn-sm btn-danger" %>
      </td>
    </tr>
    <% end %>
  </tbody>
   </table>
   </div>
  </div>
</div>