<h2>Books</h2>

<div>
  <table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
  <% @books.each do |book| %>
    <td><%=image_tag book.user.get_profile_image(100,100) %></td>
  <tbody>
    <tr>
      <td></td>
      <td><%= link_to book.title, book_path(book.id) %></td>
      <td><%= book.body %></td>
    </tr>
  </tbody>
    <% end %>
  </table>
</div>
<div class="col-md-3">
    <h2>User info</h2>
    <td>
  </td>
  <tbody><tr></tr>
  <tr>
	  <th>name</th>
	  <th></th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th></th>
  </tr>
</tbody></table>
<h1>NEW book</h1>
  <%= form_with model: @books, url: '/books', method: :post do |f| %>
    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :body %>
    <%= f.submit 'Create Book' %>
  <% end %>
</div>